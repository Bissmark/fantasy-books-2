<%- include('../partials/header') %>

All Books

<% if (books.length) { %>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Release Year</th>
            <th>Genre</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <% books.forEach(function(b) { %>
            <tr>
                <td><%= b.title %></td>
                <td><%= b.author %></td>
                <td><%= b.releaseYear %></td>
                <td><%= b.genre %></td>
                <td><%= b.description %></td>
                <td><%= b.haveRead %></td>
                <td><a href="/books/<%= b._id %>">Details</a></td>
            </tr>
        <% }); %>
    </tbody>
</table>
<% } %>

<%- include('../partials/footer') %>