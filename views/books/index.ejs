<%- include('../partials/header') %>

<h1 class="text-center mb-5 mt-5">All Books</h1>

<% if (books.length) { %>
    <div class="">
        <input type="text" class="w-full border-2 border-gray-200 h-10 px-5 pr-16 rounded-lg text-sm dark:bg-gray-800 dark:border-gray-700 mb-5" placeholder="Search for a book">
        <div class="flex flex-col flex-wrap justify-center">
            <% books.forEach(function(b) { %>
                <div class="bg-gray-800 text-white flex flex-col mb-5 w-48">
                    <label>
                        Title:
                        <%= b.title %>
                    </label>
                    <label>
                        Author:
                        <%= b.author %>
                    </label>
                    <label>
                        Release Year:
                        <%= b.releaseYear %>
                    </label>
                    <label>
                        Genre:
                        <%= b.genre %>
                    </label>
                    <label>
                        Description:
                        <%= b.description %>
                    </label>
                    <label>
                        Have Read:
                        <%= b.haveRead %>
                    </label>
                    <label>
                        <a href="/books/<%= b._id %>" class="text-gray-700 hover:text-blue-500">Details</a>
                    </label>
                </div>
                    <% }); %>
        </div>
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400 mb-10">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">Title</th>
                    <th scope="col" class="px-6 py-3">Author</th>
                    <th scope="col" class="px-6 py-3">Release Year</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(function(b) { %>
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                        <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= b.title %></td>
                        <td class="px-6 py-4"><%= b.author %></td>
                        <td class="px-6 py-4"><%= b.releaseYear %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">Genre</th>
                    <th scope="col" class="px-6 py-3">Description</th>
                    <th scope="col" class="px-6 py-3">Have Read</th>
                    <th scope="col" class="px-6 py-3">Details</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(function(b) { %>
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                        <td class="px-6 py-4"><%= b.genre %></td>
                        <td class="px-6 py-4"><%= b.description %></td>
                        <td class="px-6 py-4"><%= b.haveRead %></td>
                        <td class="px-6 py-4"><a href="/books/<%= b._id %>" class="text-gray-700 hover:text-blue-500">Details</a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<% } %>

<%- include('../partials/footer') %>