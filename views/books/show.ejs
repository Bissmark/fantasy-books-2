<%- include('../partials/header') %>
<div class="flex flex-col justify-center items-center mt-5">
    <div class="flex flex-col relative bg-gray-800 w-72 px-5 py-2.5">
        <label class="text-blue-500">
            Title: 
            <p class="inline text-white text-right"><%= book.title %></p>
        </label>
    
        <label class="text-blue-500">
            Author: 
            <p class="inline text-white"><%= book.author %></p>
        </label>
    
        <label class="text-blue-500">
            Description: 
            <p class="inline text-white"><%= book.description %></p>
        </label>
    
        <label class="text-blue-500">
            Genre: 
            <p class="inline text-white"><%= book.genre %></p>
        </label>
    
        <label class="text-blue-500">
            Release Year: 
            <p class="inline text-white"><%= book.releaseYear %></p>
        </label>
    
        <label class="text-blue-500">
            Read it: 
            <p class="inline text-white"><%= book.haveRead ? 'Yes' : 'No' %></p>
        </label>
        <div class="flex flex-row items-center justify-center absolute bottom-3 right-3">
                <a href="/books/<%= book._id %>/edit"><i class="fa-solid fa-pen-to-square fa-lg text-gray-500 hover:text-blue-800 mr-3"></i></a>
            <form action="/books/<%= book._id %>?_method=DELETE" method="POST">
                <button type="submit"><i class="fa-solid fa-trash fa-lg text-gray-500 hover:text-red-800"></i></button>
            </form>
        </div>
    </div>
    <img class="max-w-72 mt-3" src="<%= book.image %>" alt="Image of a great book">

    <div class="flex flex-wrap justify-center mt-5">
        <% if (user) { %>
            <% if (!book.haveRead) { %>
                <div class="leading-10">
                    <form class="leading-10" action="/books/<%= book._id %>/read" method="POST">
                        <button class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">Add Book to Have Read List</button>
                    </form>
                </div>
            <% } else { %>
                <div class="leading-10">
                    <form class="leading-10" action="/books/<%= book._id %>/unread" method="POST">
                        <button class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Remove Book from Have Read List</button>
                    </form>
                </div>
            <% } %>
        <% } %>
    </div>

</div>

<h2 class="text-white text-center mb-4 mt-4 text-3xl font-extrabold leading-none tracking-tight">Reviews</h2>

<% if (user) { %>
    <div class="flex flex-col justify-center items-center">
        <form class=" bg-gray-800 w-72 px-5 py-2.5" action="/books/<%= book._id %>/reviews" method="POST">
            <div class="mb-3">
                <label class="text-white">Review: </label>
                <input type="text" name="content" placeholder="Review Content">
            </div>
    
            <div id="starRating">
                <label class="text-white mr-3">Rating: </label>
                <i class="fa-regular fa-star"></i>
                <i class="fa-regular fa-star"></i>
                <i class="fa-regular fa-star"></i>
                <i class="fa-regular fa-star"></i>
                <i class="fa-regular fa-star"></i>
                <input type="hidden" name="rating" id="ratingInput">
            </div>
        <div class="flex items-center justify-center">
            <button class="focus:outline-none text-white mt-5 bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800" type="submit">Add Review</button>
        </div>
        </form>
    </div>
<% } %>

<div class="mt-3 flex justify-center">
    <% if (book.reviews.length) { %>
        <table class="bg-gray-800 w-72 text-white mb-5">
            <thead>
                <tr>
                    <th>Review</th>
                    <th>Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-xs">
                <% book.reviews.forEach(function(r) { %>
                    <tr>
                        <td class="text-center"><%= r.content %></td>
                        <td class="text-center"><% for (let i = 0; i < r.rating; i++) { %>
                            <i class="fa-solid fa-star"></i>
                        <% } %></td>
                        <td class="flex flex-row items-center justify-center">
                            <% if (user?._id.equals(r.user)) { %>
                                <a class="" href="/books/<%= book._id %>/reviews/<%= r._id %>/edit"><i class="fa-solid fa-pen-to-square fa-lg text-gray-500 hover:text-blue-800 mr-3"></i></a>
                                <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                                    <button class="" type="submit"><i class="fa-solid fa-trash fa-lg text-gray-500 hover:text-red-800"></i></button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-white text-center mb-5">No reviews yet. Be the first to review this book!</p>
    <% } %>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
    const stars = document.querySelectorAll("#starRating i");
    const ratingInput = document.getElementById("ratingInput");

    stars.forEach((star, index) => {
        star.addEventListener("click", function() {
            ratingInput.value = index + 1; // Set the rating value

            // Toggle classes to change star appearance
            stars.forEach((s, i) => {
                if (i <= index) {
                    s.classList.remove("fa-regular", "fa-star");
                    s.classList.add("fa-solid", "fa-star");
                } else {
                    s.classList.remove("fa-solid", "fa-star");
                    s.classList.add("fa-regular", "fa-star");
                }
            });
        });
    });
});
</script>

<%- include('../partials/footer') %>