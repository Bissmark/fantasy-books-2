<%- include('../partials/header') %>

<section class="flex flex-col justify-center items-center">
    <div class="flex flex-col bg-gray-700 w-72">
        <label class="text-blue-500">
            Title: 
            <p class="inline text-gray-500 text-right"><%= book.title %></p>
        </label>
    
        <label class="text-blue-500">
            Author: 
            <p class="inline text-gray-500"><%= book.author %></p>
        </label>
    
        <label class="text-blue-500">
            Description: 
            <p class="inline text-gray-500"><%= book.description %></p>
        </label>
    
        <label class="text-blue-500">
            Genre: 
            <p class="inline text-gray-500"><%= book.genre %></p>
        </label>
    
        <label class="text-blue-500">
            Release Year: 
            <p class="inline text-gray-500"><%= book.releaseYear %></p>
        </label>
    
        <label class="text-blue-500">
            Read it: 
            <p class="inline text-gray-500"><%= book.haveRead ? 'Yes' : 'No' %></p>
        </label>
    </div>

    <img class="max-w-72" src="<%= book.image %>" alt="Image of a great book">
</section>

<a class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" href="/books/<%= book._id %>/edit">Edit Book</a>
<form action="/books/<%= book._id %>?_method=DELETE" method="POST">
    <button class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" type="submit">Delete Book</button>
</form>
<form action="/books/<%= book._id %>/read" method="POST">
    <button class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">Add Book to Read List</button>
</form>

<h2>Reviews</h2>

<% if (user) { %>
    <form action="/books/<%= book._id %>/reviews" method="POST">
        <label>Review: </label>
        <input type="text" name="content" placeholder="Review Content">

        <label>Rating: </label>
        <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>

        <input class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800" type="submit" value="Add Review">
    </form>
<% } %>

<% if (book.reviews.length) { %>
    <table>
        <thead>
            <tr>
                <th>Review</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% book.reviews.forEach(function(r) { %>
                <tr>
                    <td><%= r.content %></td>
                    <td><%= r.rating %></td>
                    <td>
                        <% if (user?._id.equals(r.user)) { %>
                            <a href="/books/<%= book._id %>/reviews/<%= r._id %>/edit">Edit Review</a>
                            <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                                <button type="submit">Delete Review</button>
                            </form>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>No reviews yet. Be the first to review this book!</p>
<% } %>

<%- include('../partials/footer') %>