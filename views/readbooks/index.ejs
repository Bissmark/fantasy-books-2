<ul class="mt-5">
    <% books.forEach(book => { %>
        <div class="flex flex-row justify-center items-center w-full">
            <li class="text-white"><%= book.title %></li>
            <li class=" px-6 py-4"><a href="/books/<%= book._id %>" class="text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-sm px-5 py-2.5">Details</a></li>
        </div>
    <% }) %>
</ul>

